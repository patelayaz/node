<% layout(`layouts/boilerplate`) %>
<div class="row">
  <div class="col-md-12">
    <h1 class="text-center">All Properties</h1>
    <h2 class="text-center">Find your new home to rent on Home Finder</h2>
    <p class="text-center px-md-5">With the UK's largest selection of rental properties across England, Scotland
    and Wales, you're more likely to find your next home on Rightmove than anywhere
    else. Listing a wide range of property types and styles, we cover everything
    from student lettings, to studio flats, detached family homes and even luxury
    Mayfair penthouses.</p>
  </div>
</div>

<% properties.forEach(property => { %>
  <% const agentIndex = agents.findIndex((agent) => agent.agentCode === property.agentCode); const agent = agents[agentIndex]; %>
  <div class="card mb-3 property-listing-card">
    <div class="row">
      <div class="col-md-5 image-column">
        <img  src="<%= property.image %>" alt="<%= property.title %>">
      </div>
      <div class="col-md-7 data-column d-flex flex-column">
        <div class="parameters-row">
          <h2 class="rent-amount">
              Â£ <%= property.rent %>/month
          </h2>
          <div class="column">
            <div class="value">3</div>
            <div class="title">Beds</div>
          </div>
          <div class="column">
            <div class="value">3</div>
            <div class="title">Baths</div>
          </div>
        </div>
        <div class="property-details-row">
          <h4 class="card-title">
            <%= property.title %>
          </h4>
          <h6 class="card-title">
            <%= property.area %>, <%= property.city %>, <%= property.postcode %>
          </h6>
          <p class="card-text">| <% const max = 4; for( let i = 0; i <= max; i++ ) { %>
              <%= property.features[i] %> |
            <% } %>
          </p>
          <a href="/properties/<%= property._id %>" class="btn btn-primary">View</a>
        </div>
        <div class="agent-details-row mt-auto">
          <h5 class="card-title">Listed by</h5>
          <div class="logo-column">
            <a href="/agents/<%= agent._id %>">
              <img src="/images/agentLogos/<%= agent.name %>.jpeg" alt="" srcset="">
            </a>
          </div>
          <div class="details-column">
            <div class="name">
              <a href="/agents/<%= agent._id %>"><%= agent.name %></a>
            </div>
            <div class="phone"><%= agent.phone %></div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% }) %>
